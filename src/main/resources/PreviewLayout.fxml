<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2042.view.GamePreview">
   <children>
      <StackPane fx:id="previewContainer" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Rectangle fill="rgba(0,0,0,0.7)" height="10000.0" width="10000.0" />

            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="30.0" style="-fx-background-color: rgba(45, 45, 45, 0.9); -fx-background-radius: 20; -fx-border-color: rgba(100, 100, 100, 0.8); -fx-border-width: 2; -fx-border-radius: 20;">
               <children>
                  <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#handleNewGame" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #45a049); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-border-radius: 10; -fx-cursor: hand;" text="New Game">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.5)" height="10.0" radius="4.5" width="10.0" />
                     </effect>
                  </Button>

                  <Button fx:id="highScoreButton" mnemonicParsing="false" onAction="#handleHighScore" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to bottom, #FF9800, #F57C00); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-border-radius: 10; -fx-cursor: hand;" text="High Score">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.5)" height="10.0" radius="4.5" width="10.0" />
                     </effect>
                  </Button>

                  <Text fx:id="highScoreText" fill="YELLOW" visible="false">
                     <font>
                        <Font name="Arial Bold" size="24.0" />
                     </font>
                  </Text>
               </children>
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="rgba(0,0,0,0.7)" height="20.0" radius="9.5" width="20.0" />
               </effect>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
